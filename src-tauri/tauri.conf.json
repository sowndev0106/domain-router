{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Domain Router",
  "version": "1.0.0",
  "identifier": "com.domainrouter.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Domain Router",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Domain Router Team",
    "category": "Utility",
    "shortDescription": "Domain routing and port mapping tool",
    "longDescription": "Powerful Ubuntu desktop application for managing domain routing and port mapping with Traefik reverse proxy",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}
